<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <!-- Titulo de la vista -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Listado de Ligas"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"/>

    <!-- RecyclerView donde se mostrar치n las ligas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewLigas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- TextView con el correo electr칩nico o mensaje de estado -->
    <TextView
        android:id="@+id/textMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Iniciada sesi칩n"
        android:layout_marginBottom="8dp"/>

    <!-- Bot칩n para regresar al login o a otro fragmento -->
    <Button
        android:id="@+id/buttonVolver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:layout_marginBottom="8dp"/>

</LinearLayout>
